@model IEnumerable<PiArt.Models.RentViewModel>

@{
    ViewBag.Title = "IndexGalleryOwner";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>IndexGalleryOwner</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        
        <th>
            @Html.DisplayNameFor(model => model.StartDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DescriptionRent)
        </th>
        <th>
           Gallery Address
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th>
            Treat your Request 
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
     
       
        <td>
            @Html.DisplayFor(modelItem => item.StartDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EndDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DescriptionRent)
        </td>
        <td>
            @ViewBag.data
        </td>
        <td>
            
            @Html.DisplayFor(modelItem => item.State)
        </td>
        
        <td>
            <input type="button" value="Refuse " class="myButton" onclick="@("window.location.href='" + @Url.Action("Refuse", "Rent",new {  id=item.RentId })  + "'");" />
            <input type="button" value="Accept" class="myButton" onclick="@("window.location.href='" + @Url.Action("Accepted", "Rent",new {  id=item.RentId }) + "'");" />
        </td>

    </tr>
}
    
</table>
